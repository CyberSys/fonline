{
    "files": [
        {
            "name": "CommonLib",
            "path": "Source/Common"
        },
        {
            "name": "ClientLib",
            "path": "Source/Client"
        },
        {
            "name": "ServerLib",
            "path": "Source/Client"
        },
        {
            "name": "EditorLib",
            "path": "Source/Editor"
        }
    ],
    "actions": [
        {
            "label": "WSL Shell",
            "group": "Service"
        },
        {
            "label": "Check Workspace",
            "group": "Service",
            "command": "BuildTools/check-workspace.sh"
        },
        {
            "label": "Prepare Workspace",
            "group": "Service",
            "command": "BuildTools/prepare-workspace.sh"
        },
        {
            "label": "Generate Todo",
            "group": "Service",
            "command": "cd BuildTools && python todo-generator.py"
        },
        {
            "label": "Format Code",
            "group": "Service",
            "command": "cd Source && clang-format -i Applications/*.* Client/*.* Common/*.* Server/*.* Editor/*.*"
        },
        {
            "label": "Build for Windows (x64)",
            "group": "Build",
            "command": "BuildTools/build.sh win64"
        },
        {
            "label": "Build for Windows (x86)",
            "group": "Build",
            "command": "BuildTools/build.sh win32"
        },
        {
            "label": "Build for UWP",
            "group": "Build",
            "command": "BuildTools/build.sh uwp"
        },
        {
            "label": "Build for Linux",
            "group": "Build",
            "command": "BuildTools/build.sh linux"
        },
        {
            "label": "Build for Web (release)",
            "group": "Build",
            "command": "BuildTools/build.sh web"
        },
        {
            "label": "Build for Web (debug)",
            "group": "Build",
            "command": "BuildTools/build.sh web-debug"
        },
        {
            "label": "Build for Android (arm)",
            "group": "Build",
            "command": "BuildTools/build.sh android"
        },
        {
            "label": "Build for Android (arm64)",
            "group": "Build",
            "command": "BuildTools/build.sh android-arm64"
        },
        {
            "label": "Build for macOS",
            "group": "Build",
            "command": "BuildTools/build.sh mac"
        },
        {
            "label": "Build for iOS",
            "group": "Build",
            "command": "BuildTools/build.sh ios"
        },
        {
            "label": "Run unit tests",
            "group": "Test",
            "command": "BuildTools/validate.sh unit-tests"
        },
        {
            "label": "Run code coverage",
            "group": "Test",
            "command": "BuildTools/validate.sh code-coverage"
        }
    ]
